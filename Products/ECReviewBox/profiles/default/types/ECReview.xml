<?xml version="1.0"?>
<object name="ECReview"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="ECReviewBox" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <property name="title" i18n:translate="">Peer-Review</property>
  <property name="description"
    i18n:translate=""></property>
  <property name="content_meta_type">ECReview</property>
  <property name="content_icon">document_icon.gif</property>
  <property name="product">ECReviewBox</property>
  <property name="factory">addECReview</property>
  <property name="immediate_view">ecr_view</property>
  <property name="global_allow">True</property>
  <property name="filter_content_types">False</property>
  <property name="allow_discussion">False</property>
  <property name="default_view">ecr_view</property>
  <property name="view_methods">
    <element value="base_view" />
    <element value="ecr_view" />
  </property>
  <alias from="(Default)" to="(dynamic view)" />
  <alias from="edit" to="atct_edit" />
  <alias from="view" to="ecr_view" />
  <alias from="grade" to="ecr_grade" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="(selected layout)" />
  <action title="View" action_id="view" category="object"
    condition_expr="python:1"
    url_expr="string:${object_url}/ecr_view" visible="True">
    <permission value="View" />
  </action>
  <action title="Edit" action_id="edit" category="object"
      condition_expr="
        python:here.Creator() ==
        portal.portal_membership.getAuthenticatedMember().getUserName()"
      url_expr="string:${object_url}/edit" 
      visible="True">
    <permission value="Modify portal content"/>
  </action>
  <action
      title="Grade"
      action_id="grade"
      category="object"
      condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user"
      url_expr="string:$object_url/ecr_grade"
      visible="True">
    <permission value="Modify portal content" />
  </action>
</object>
